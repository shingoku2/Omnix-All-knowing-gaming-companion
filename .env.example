# Gaming AI Assistant Configuration (Example)

# AI Provider Configuration
# Options: ollama, openai_compatible
AI_PROVIDER=ollama

# Ollama Configuration (Default)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# OpenAI-Compatible Configuration (Optional)
# Use these if AI_PROVIDER=openai_compatible
AI_API_KEY=your-api-key-here
AI_BASE_URL=http://localhost:1234/v1
AI_MODEL=local-model

# Application Settings
OVERLAY_HOTKEY=ctrl+shift+g
CHECK_INTERVAL=5

# Overlay Window Settings
OVERLAY_X=100
OVERLAY_Y=100
OVERLAY_WIDTH=900
OVERLAY_HEIGHT=700
OVERLAY_MINIMIZED=false
OVERLAY_OPACITY=0.95

# Feature Flags
MACROS_ENABLED=false
MACRO_SAFETY_UNDERSTOOD=false
HRM_ENABLED=false